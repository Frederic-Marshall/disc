<%= render 'shared/errors', object: category %>

<%= form_with(model: category) do |form| %>
	<div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

	<div>
    <%= form.label :parent_id, style: "display: block" %>
    <%= form.collection_select :parent_id, Category.where.not(id: @category.id).order(:name), 
																					 :id, 
																					 :name, 
																					 { include_blank: true } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
